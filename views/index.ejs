<%- include('./partials/header.ejs', {}) %>
<section class="section mt-5">
    <div class="container">
        <h1>&nbsp;Lihez Bot List - Explore Discord Bots</h1>
        <form action="/search" method="POST" class="container-fluid">
        <div class="input-group">
            <input type="text" name="search" id="search" class="form-control" placeholder="Search Bot Or User">
                  <button class="input-group-text" id="basic-addon1"><i class="fab fa-searchengin"></i></button>
                </div>
        </form>
        <br/>
     <hr/>
    </div>
</section>

<section class="section mt-5">
    <div class="container">
        <h2>Popular Bots</h2>
        <div class="row">
        <% for(i=0; i < data.length; i++){ %>
            <div class="me-5 card bg-dark text-light shadow-lg mt-5" style="width: 18rem;">
                <a href="/bot/<%= data[i].botID %>" class="text-decoration-none text-light">
                <img src="<%= data[i].botPP %>" class="mx-auto d-block card-img-top rounded-pill card-img mt-2" alt="botpp">
                <div class="card-body">
                  <h5 class="card-title mx-auto"><%= data[i].botName %></h5>
                  <p class="card-text text-truncate mx-auto"><%= data[i].shortD %></p>
                </a>
                </div>
              </div>
            <% } %>
        </div>
        <br/>
     <hr/>
    </div>

</section>

<%- include('./partials/footer.ejs', {}) %>